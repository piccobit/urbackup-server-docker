#!/bin/bash

if [ ! -d /cipher/backups ]; then
mkdir -p /cipher/backups
gocryptfs -init -passfile /tmp/backups.passwd /cipher/backups
fi

if [ ! -d /cipher/database ]; then
mkdir -p /cipher/database
gocryptfs -init -passfile /tmp/database.passwd /cipher/database
fi

gocryptfs -passfile /tmp/backups.passwd /cipher/backups /backups
gocryptfs -passfile /tmp/database.passwd /cipher/database /var/urbackup

echo "/backups" > /var/urbackup/backupfolder

exec urbackupsrv "$@"
